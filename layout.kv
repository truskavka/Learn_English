ScreenManager:
    MenuScreen:
    WordsScreen:
    WordsScreen2:
    AddWords:
    DeleteWords:
    BaseScreen:

<BaseScreen>:
    MDFillRoundFlatIconButton:
        text: ' '
        icon: "keyboard-backspace"
        pos_hint: {'center_x':0.1,'center_y':0.95}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

<MenuScreen>:
    name: root.name
    MDRectangleFlatButton:
        text: root.button1_name
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'learnWords'
    MDRectangleFlatButton:
        text: root.button2_name
        pos_hint: {'center_x':0.5,'center_y':0.5}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'addWords'
    MDRectangleFlatButton:
        text: root.button3_name
        pos_hint: {'center_x':0.5,'center_y':0.4}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'delWords'

<WordsScreen>:
    MDLabel:
        text: root.label_text
        id: lbl0
        font_style: "H3"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}



    MDRectangleFlatButton:
        text: root.choice_button1_text
        id: btn0
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button2_text
        id: btn1
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.20}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button3_text
        id: btn2
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button4_text
        id: btn3
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.20}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

<WordsScreen2>

<AddWords>:
    MDTextField:
        id: txt0
        hint_text: "Enter word you want to add"
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter text"
        pos_hint: {'center_x':0.5,'center_y':0.80}
        size_hint: 0.8, None

    MDTextField:
        id: txt1
        hint_text: "Enter translation"
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter text"
        pos_hint: {'center_x':0.5,'center_y':0.65}
        size_hint: 0.8, None

    MDRectangleFlatButton:
        text: "Add word"
        id: btn0
        pos_hint: {'center_x':0.5,'center_y':0.30}
        size_hint: 0.8, None
        on_release: root.add_word_to_dict()

<DeleteWords>:
    MDTextField:
        id: txt0
        hint_text: "Enter word you want to delete"
        required: True
        helper_text_mode: "on_error"
        helper_text: "Enter text"
        pos_hint: {'center_x':0.5,'center_y':0.80}
        size_hint: 0.8, None

    MDRectangleFlatButton:
        text: "Delete word"
        id: btn0
        pos_hint: {'center_x':0.5,'center_y':0.30}
        size_hint: 0.8, None
        on_release: root.delete_word()

    MDRectangleFlatButton:
        text: "Delete all words"
        id: btn0
        pos_hint: {'center_x':0.5,'center_y':0.2}
        size_hint: 0.8, None
        on_release: root.delete_all_words()
