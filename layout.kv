ScreenManager:
    MenuScreen:
    WordsScreen:
    IrregularVerbsScreen:
<MenuScreen>:
    name: 'menu'
    MDRectangleFlatButton:
        text: 'Learn words'
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'learnWords'
    MDRectangleFlatButton:
        text: 'Learn irregular verbs'
        pos_hint: {'center_x':0.5,'center_y':0.5}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'irregularV'

<WordsScreen>:
    MDLabel:
        text: 'Word to translate'
        font_style: "H3"
        halign: 'justify'
        pos_hint: {'center_x': 0.65, 'center_y': 0.75}

    MDFillRoundFlatIconButton:
        text: ' '
        icon: "keyboard-backspace"
        pos_hint: {'center_x':0.1,'center_y':0.95}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

    MDRectangleFlatButton:
        text: 'Translate variation 1'
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_press:

    MDRectangleFlatButton:
        text: 'Translate variation 2'
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.20}
        size_hint: 0.4, 0.2
        on_press:

    MDRectangleFlatButton:
        text: 'Translate variation 3'
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_press:

    MDRectangleFlatButton:
        text: 'Translate variation 4'
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.20}
        size_hint: 0.3, 0.2
        on_press:


<IrregularVerbsScreen>:
    name: 'irregularV'
    MDLabel:
        text: 'Learn irregular verbs'
        halign: 'center'
    MDRectangleFlatButton:
        text: 'Back'
        pos_hint: {'center_x':0.5,'center_y':0.1}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'
