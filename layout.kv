ScreenManager:
    MenuScreen:
    WordsScreen:
    WordsScreen2:
<MenuScreen>:
    name: root.name
    MDRectangleFlatButton:
        text: root.button_name
        pos_hint: {'center_x':0.5,'center_y':0.6}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'learnWords'
    MDRectangleFlatButton:
        text: 'Learn irregular verbs'
        pos_hint: {'center_x':0.5,'center_y':0.5}
        on_press:
            root.manager.transition.direction = 'left'
            root.manager.current = 'irregularV'

<WordsScreen>:
    MDLabel:
        text: root.label_text
        id: lbl0
        font_style: "H3"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.75}

    MDLabel:
        text: root.label2_text
        id: lbl1
        font_style: "H3"
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}

    MDFillRoundFlatIconButton:
        text: ' '
        icon: "keyboard-backspace"
        pos_hint: {'center_x':0.1,'center_y':0.95}
        on_release:
            root.manager.transition.direction = 'right'
            root.manager.current = 'menu'

    MDRectangleFlatButton:
        text: root.choice_button1_text
        id: btn0
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button2_text
        id: btn1
        font_style: "H6"
        pos_hint: {'center_x':0.25,'center_y':0.20}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button3_text
        id: btn2
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.50}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)

    MDRectangleFlatButton:
        text: root.choice_button4_text
        id: btn3
        font_style: "H6"
        pos_hint: {'center_x':0.75,'center_y':0.20}
        size_hint: 0.4, 0.2
        on_release:
            root.is_correct_answer(self)



